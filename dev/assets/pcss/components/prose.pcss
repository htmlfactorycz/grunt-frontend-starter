.prose {
  font-size: theme("fontSize.15px");
  line-height: theme("lineHeight.relaxed");
  color: theme("colors.gray.DEFAULT");
  --space: theme("spacing.4");

  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  strong {
    line-height: theme("lineHeight.snug");
    color: theme("colors.black");
    font-weight: theme("fontWeight.bold");
  }

  h1 {
    font-size: 2em; /* 30 */
  }

  h2 {
    font-size: 1.33em; /* 25 */
  }

  h3 {
    font-size: 1.2em; /* 20 */
  }

  h4 {
    font-size: 1.2em; /* 18 */
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    margin-top: calc(var(--space) * 1.85);
    margin-bottom: calc(var(--space) / 2);

    &:first-child {
      margin-top: 0;
    }
  }

  .lead {
    font-size: 1.2em;
    line-height: theme("lineHeight.relaxed");
    margin-bottom: theme("spacing.5");
  }

  a {
    @apply text-primary underline hover:text-primary-hover transition-colors;
  }

  > * {
    margin-bottom: var(--space);
  }

  img,
  figure,
  hr,
  .wp-caption {
    margin: calc(var(--space) * 2);
  }

  hr {
    margin-left: 0;
    margin-right: 0;
    border-top: 1px solid theme("colors.gray.100");
  }

  figure,
  .wp-caption {
    max-width: 100%;

    img {
      margin: 0;
    }

    figcaption,
    .wp-caption-text {
      @apply font-medium;
      font-size: theme("fontSize.12px");
      line-height: theme("lineHeight.relaxed");
      padding: theme("spacing.2") 0;
      color: theme("colors.gray.500");
      border-bottom: 1px solid theme("colors.gray.100");
    }
  }

  .alignleft,
  .wp-caption.alignleft {
    float: left;
    margin: 0 var(--space) var(--space) 0;
  }

  .alignright,
  .wp-caption.alignright {
    float: right;
    margin: 0 0 var(--space) var(--space);
  }

  .aligncenter,
  .wp-caption.aligncenter {
    @apply ml-auto mr-auto;
  }

  figure .aligncenter {
    @apply grid place-content-center;
  }

  blockquote {
    position: relative;
    font-size: theme("fontSize.18px");
    line-height: theme("lineHeight.relaxed");
    @apply font-medium;
    padding: 0;
    margin: theme("spacing.7") 0;
    color: theme("colors.primary.DEFAULT");

    &::before {
      display: block;
      content: "";
      position: relative;

      width: 24px;
      height: 24px;
      left: 0;
      top: 0;
      margin-bottom: theme("spacing.7");
      background: url('data:image/svg+xml;utf8,<svg fill="%2334456C" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M1.53656087,4.20101138 C2.51439286,3.32297583 3.83143196,2.89063806 5.15512972,3.02367806 C7.54313947,3.26979361 9.37899723,5.42496692 9.33246834,7.93265578 C9.20608435,14.4381224 4.63627106,16.4668957 2.68068797,17.038949 C2.58755553,17.0722379 2.49441775,17.0788601 2.4012862,17.0788601 C2.06869687,17.0788601 1.7627422,16.9192157 1.57647198,16.6265401 C1.33701421,16.2540424 1.37692532,15.7751357 1.66960354,15.4425401 C2.59420797,14.3915535 3.28597952,13.3006468 3.72498396,12.1964691 C1.55653687,11.7840691 0,9.86168687 0,7.66660245 C0,6.34957135 0.558769772,5.08571359 1.53656087,4.20101138 Z M12.2032274,4.20101138 C13.1810594,3.32297583 14.4980985,2.89063806 15.8217963,3.02367806 C18.209806,3.26979361 20.0456638,5.42496692 19.9991349,7.93265578 C19.8727509,14.4381224 15.3029376,16.4668957 13.3473545,17.038949 C13.2542221,17.0722379 13.1610843,17.0788601 13.0679527,17.0788601 C12.7353634,17.0788601 12.4294088,16.9192157 12.2431385,16.6265401 C12.0036808,16.2540424 12.0435919,15.7751357 12.3362701,15.4425401 C13.2608745,14.3915535 13.9526461,13.3006468 14.3916505,12.1964691 C12.2232034,11.7840691 10.6666666,9.86168687 10.6666666,7.66660245 C10.6666666,6.34957135 11.2254363,5.08571359 12.2032274,4.20101138 Z"></path></svg>')
        center / contain no-repeat;
    }

    cite {
      display: block;
      margin-top: theme("spacing.2");
      font-size: theme("fontSize.15px");
      color: theme("colors.gray.700");
    }
  }

  ul,
  ol {
    position: relative;
    padding-left: 1.1em;

    li + li,
    ul,
    ol {
      margin-top: 0.5em;
    }
  }

  ul {
    @apply list-disc;
  }

  ol {
    @apply list-decimal;
  }

  h1 + h2,
  h2 + h3,
  h3 + h4,
  h5 + h6 {
    margin-top: 0;
  }

  > *:last-child {
    margin-bottom: 0;
  }

  @screen md {
    --space: theme("spacing.6");

    blockquote {
      font-size: theme("fontSize.20px");
      padding-left: 100px;
      padding-right: 40px;
      margin: theme("spacing.9") 0;

      &::before {
        position: absolute;
        left: 40px;
        top: 10px;
        margin: 0;
      }
    }
  }
}
